<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BaseTheme">
        <attr name="collectionAdjusterTint" format="color" />
    </declare-styleable>

    <declare-styleable name="ForegroundImageView">
        <attr name="android:foreground" />
    </declare-styleable>

    <declare-styleable name="PokemonTypeView">
        <attr name="pokeType" format="enum">
            <enum name="colorless" value="0" />
            <enum name="fire" value="1" />
            <enum name="grass" value="2" />
            <enum name="water" value="3" />
            <enum name="electric" value="4" />
            <enum name="fighting" value="5" />
            <enum name="psychic" value="6" />
            <enum name="steel" value="7" />
            <enum name="dragon" value="8" />
            <enum name="fairy" value="9" />
            <enum name="darkness" value="10" />
        </attr>
    </declare-styleable>

    <declare-styleable name="DeckImageView">
        <attr name="maskDrawable" format="reference" />
        <attr name="borderDrawable" format="reference" />
        <attr name="desaturateOnPress" format="boolean" />
        <attr name="forceAspectRatio" format="boolean" />

        <attr name="primaryType" format="enum">
            <enum name="colorless" value="0" />
            <enum name="fire" value="1" />
            <enum name="grass" value="2" />
            <enum name="water" value="3" />
            <enum name="electric" value="4" />
            <enum name="fighting" value="5" />
            <enum name="psychic" value="6" />
            <enum name="steel" value="7" />
            <enum name="dragon" value="8" />
            <enum name="fairy" value="9" />
            <enum name="darkness" value="10" />
        </attr>

        <attr name="secondaryType" format="enum">
            <enum name="colorless" value="0" />
            <enum name="fire" value="1" />
            <enum name="grass" value="2" />
            <enum name="water" value="3" />
            <enum name="electric" value="4" />
            <enum name="fighting" value="5" />
            <enum name="psychic" value="6" />
            <enum name="steel" value="7" />
            <enum name="dragon" value="8" />
            <enum name="fairy" value="9" />
            <enum name="darkness" value="10" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MarqueeCardContainer">
        <attr name="cardWidth" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="ImageScaleView">
        <attr name="matrixType" format="enum">
            <enum name="none" value="-1" />
            <enum name="top_center" value="0" />
            <enum name="bottom_center" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CollectionProgressBar">
        <attr name="progressColor" format="color" />
        <attr name="trackColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension|reference" />
    </declare-styleable>

</resources>
