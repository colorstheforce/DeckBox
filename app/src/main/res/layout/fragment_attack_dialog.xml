<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="320dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="8dp"
    >

    <TextView
        android:id="@+id/attackDamage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="?attr/colorPrimary"
        android:textSize="60sp"
        tools:text="100"
        android:text="0"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/actionSubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_remove_white_24dp"
        android:tint="@color/black"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toStartOf="@id/attackDamage"
        app:layout_constraintTop_toTopOf="@id/attackDamage"
        app:layout_constraintBottom_toBottomOf="@id/attackDamage"
        />

    <ImageView
        android:id="@+id/actionAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_add_white_24dp"
        android:tint="@color/black"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toEndOf="@id/attackDamage"
        app:layout_constraintTop_toTopOf="@id/attackDamage"
        app:layout_constraintBottom_toBottomOf="@id/attackDamage"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/burnedSwitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/action_playtest_burned"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:drawableStart="@drawable/ic_burn"
        android:drawablePadding="24dp"
        android:drawableTint="?android:textColorSecondary"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/attackDamage"

        tools:ignore="UnusedAttribute"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/poisonSwitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/action_playtest_poisoned"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:drawableStart="@drawable/ic_poison"
        android:drawablePadding="24dp"
        android:drawableTint="?android:textColorSecondary"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/burnedSwitch"

        tools:ignore="UnusedAttribute"
        />

    <LinearLayout
        android:id="@+id/statusItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/poisonSwitch"
        >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="8dp"
            android:alpha=".54"
            android:src="@drawable/ic_face_black_24dp"
            />

        <Spinner
            android:id="@+id/statusSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:entries="@array/status_effects"
            />

    </LinearLayout>

    <View
        android:id="@+id/topDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/black12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusItem"
        />

    <ScrollView
        android:id="@+id/benchScrollView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topDivider">

        <LinearLayout
            android:id="@+id/benchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/benchSubheader"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical|start"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/subheader_bench"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?android:textColorSecondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topDivider"
                />

            <!-- Add bench items here -->
<!--            <include layout="@layout/item_playtest_action_bench" />-->
<!--            <include layout="@layout/item_playtest_action_bench" />-->
<!--            <include layout="@layout/item_playtest_action_bench" />-->
<!--            <include layout="@layout/item_playtest_action_bench" />-->
<!--            <include layout="@layout/item_playtest_action_bench" />-->

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/bottomDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/benchScrollView"
        />

    <Button
        android:id="@+id/actionPositive"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/action_apply"

        app:layout_constraintTop_toBottomOf="@id/benchScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/actionNegative"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/action_cancel"

        app:layout_constraintTop_toTopOf="@id/actionPositive"
        app:layout_constraintEnd_toStartOf="@+id/actionPositive"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
