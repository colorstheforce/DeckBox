<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="133dp"
    android:layout_height="160dp"
    android:layout_marginStart="@dimen/padding_tiny"
    android:layout_marginEnd="@dimen/padding_tiny"
    android:stateListAnimator="@animator/elevation_state_anim"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_radius"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.r0adkll.deckbuilder.arch.ui.widgets.DeckImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="matrix"
            android:background="@color/grey_300"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorPrimary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Psychic Malamar"
                />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Daniel Altavilla"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
