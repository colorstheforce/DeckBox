<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="8dp"
    >

    <ImageView
        android:id="@+id/coin"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_pika_coin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/labelHeads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/coin_flip_label_heads"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"

        app:layout_constraintEnd_toStartOf="@+id/labelTails"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coin"
        />

    <TextView
        android:id="@+id/labelTails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coin_flip_label_tails"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/labelHeads"
        app:layout_constraintTop_toTopOf="@id/labelHeads"
        />

    <TextView
        android:id="@+id/resultHeads"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/primaryColor"
        android:fontFamily="sans-serif-medium"
        tools:text="0"

        app:layout_constraintTop_toBottomOf="@id/labelHeads"
        app:layout_constraintStart_toStartOf="@id/labelHeads"
        app:layout_constraintEnd_toEndOf="@id/labelHeads"
        />

    <TextView
        android:id="@+id/resultTails"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/primaryColor"
        android:fontFamily="sans-serif-medium"
        tools:text="0"

        app:layout_constraintTop_toBottomOf="@id/labelTails"
        app:layout_constraintStart_toStartOf="@id/labelTails"
        app:layout_constraintEnd_toEndOf="@id/labelTails"
        />

    <Button
        android:id="@+id/actionPositive"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="@string/action_flip"

        app:layout_constraintTop_toBottomOf="@id/resultHeads"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/actionNegative"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/action_done"

        app:layout_constraintTop_toTopOf="@id/actionPositive"
        app:layout_constraintEnd_toStartOf="@+id/actionPositive"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
