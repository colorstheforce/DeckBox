<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="8dp"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        tools:text="Apply damage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/counter"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/primaryColor"
        android:fontFamily="sans-serif-medium"
        tools:text="0"

        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/actionSubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="16dp"
        android:src="@drawable/ic_remove_white_24dp"
        android:tint="@color/black"
        android:background="?attr/selectableItemBackgroundBorderless"

        app:layout_constraintEnd_toStartOf="@id/counter"
        app:layout_constraintTop_toTopOf="@id/counter"
        app:layout_constraintBottom_toBottomOf="@id/counter"
        />

    <ImageView
        android:id="@+id/actionAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="16dp"
        android:src="@drawable/ic_add_white_24dp"
        android:tint="@color/black"
        android:background="?attr/selectableItemBackgroundBorderless"

        app:layout_constraintStart_toEndOf="@id/counter"
        app:layout_constraintTop_toTopOf="@id/counter"
        app:layout_constraintBottom_toBottomOf="@id/counter"
        />

    <Button
        android:id="@+id/actionPositive"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="@string/action_apply"

        app:layout_constraintTop_toBottomOf="@id/counter"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/actionNegative"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/action_cancel"

        app:layout_constraintTop_toTopOf="@id/actionPositive"
        app:layout_constraintEnd_toStartOf="@+id/actionPositive"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
