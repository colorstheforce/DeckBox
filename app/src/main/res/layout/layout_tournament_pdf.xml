<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:padding="16dp"
    >


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tournament_pdf_title"
        android:textSize="@dimen/display_1"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tournament_pdf_format_title"
            android:textSize="18sp"
            android:textColor="@color/black87"
            android:textStyle="italic|bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp">

            <ImageView
                android:id="@+id/formatStandard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_checkbox_blank_outline_black_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="@string/tournament_pdf_format_standard"
                android:textSize="18sp"
                android:textColor="@color/black87"
                android:textStyle="italic|bold"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/formatExpanded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_checkbox_blank_outline_black_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="@string/tournament_pdf_format_expanded"
                android:textSize="18sp"
                android:textColor="@color/black87"
                android:textStyle="italic|bold"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:background="@color/black26"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tournament_pdf_player_name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                />

            <EditText
                android:id="@+id/playerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-4dp"
                tools:text="Drew Heavner"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/tournament_pdf_player_id"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                />

            <EditText
                android:id="@+id/playerID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-4dp"
                tools:text="123456789"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/tournament_pdf_player_dob"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                />

            <EditText
                android:id="@+id/dateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-4dp"
                tools:text="05/11/1990"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/tournament_pdf_player_age_division"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                />

            <LinearLayout
                android:id="@+id/optionsAgeDivision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/optionAgeDivisionJunior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_checkbox_blank_circle_outline_black_24dp"
                        />

                    <TextView
                        android:id="@+id/optionAgeDivisionJuniorLabel"
                        android:text="@string/age_division_junior"
                        style="@style/TextAppearance.Deck.Pdf.RadioOption"
                        android:layout_marginStart="8dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/optionAgeDivisionSenior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_checkbox_blank_circle_outline_black_24dp"
                        />

                    <TextView
                        android:id="@+id/optionAgeDivisionSeniorLabel"
                        android:text="@string/age_division_senior"
                        style="@style/TextAppearance.Deck.Pdf.RadioOption"
                        android:layout_marginStart="8dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/optionAgeDivisionMasters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_checkbox_blank_circle_outline_black_24dp"
                        />

                    <TextView
                        android:id="@+id/optionAgeDivisionMastersLabel"
                        android:text="@string/age_division_masters"
                        style="@style/TextAppearance.Deck.Pdf.RadioOption"
                        android:layout_marginStart="8dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/tournament_pdf_generated_by"
                android:textStyle="italic"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/extraColumn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:visibility="gone">

            <TableLayout
                android:id="@+id/tablePokemon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

                <TableRow android:background="#CCC">

                    <TextView
                        android:text="@string/tournament_pdf_table_pokemon"
                        style="@style/TextAppearance.Deck.Pdf.TableTitle" />

                </TableRow>

                <TableRow android:background="@color/black">

                    <TextView
                        android:text="@string/export_column_quantity_title"
                        style="@style/TextAppearance.Deck.Pdf.Quantity"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/export_column_name_title"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"

                        android:layout_column="1"
                        />

                    <TextView
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/export_column_set_title"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"

                        />

                    <TextView
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="@string/export_column_collection_number_title"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:minWidth="48dp"
                        />

                </TableRow>

                <!--<include layout="@layout/layout_tournament_card_row" />-->

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tablePokemon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp">

                <TableRow android:background="#CCC">

                    <TextView
                        android:id="@+id/tablePokemon2Title"
                        android:text="@string/tournament_pdf_table_pokemon_contd"
                        style="@style/TextAppearance.Deck.Pdf.TableTitle" />

                </TableRow>

                <TableRow android:background="@color/black">

                    <TextView
                        android:text="@string/export_column_quantity_title"
                        style="@style/TextAppearance.Deck.Pdf.Quantity"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/export_column_name_title"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"

                        android:layout_column="1"
                        />

                    <TextView
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/export_column_set_title"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"

                        />

                    <TextView
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="@string/export_column_collection_number_title"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:minWidth="48dp"
                        />

                </TableRow>

                <!--<include layout="@layout/layout_tournament_card_row" />-->

            </TableLayout>

            <TableLayout
                android:id="@+id/tableTrainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

                <TableRow android:background="#CCC">

                    <TextView
                        android:text="@string/tournament_pdf_table_trainer"
                        style="@style/TextAppearance.Deck.Pdf.TableTitle" />

                </TableRow>

                <TableRow android:background="@color/black">

                    <TextView
                        android:text="@string/export_column_quantity_title"
                        style="@style/TextAppearance.Deck.Pdf.Quantity"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/export_column_name_title"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"

                        android:layout_column="1"
                        />

                </TableRow>

                <!--<include layout="@layout/layout_tournament_card_row" />-->

            </TableLayout>

            <TableLayout
                android:id="@+id/tableEnergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp">

                <TableRow android:background="#CCC">

                    <TextView
                        android:text="@string/tournament_pdf_table_energy"
                        style="@style/TextAppearance.Deck.Pdf.TableTitle" />

                </TableRow>

                <TableRow android:background="@color/black">

                    <TextView
                        android:text="@string/export_column_quantity_title"
                        style="@style/TextAppearance.Deck.Pdf.Quantity"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/export_column_name_title"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"

                        android:layout_column="1"
                        />

                </TableRow>

                <!--<include layout="@layout/layout_tournament_card_row" />-->

            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>