<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/costsLayout"
    >

    <Button
        android:id="@+id/actionView"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/dr_action_buy_background"
        android:text="@string/action_view_tcgplayer"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/dr_marketplace_prices_background"
        >

        <LinearLayout
            android:id="@+id/pricesRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/priceLowLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="?attr/selectableItemBackground"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:text="@string/marketplace_price_low"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/secondaryColor"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    />

                <TextView
                    android:id="@+id/priceLow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/fira_mono_medium"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="$100.00"
                    />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/secondaryColor"
                />

            <LinearLayout
                android:id="@+id/priceMarketLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="?attr/selectableItemBackground"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:text="@string/marketplace_price_market"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/secondaryColor"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    />

                <TextView
                    android:id="@+id/priceMarket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/fira_mono_bold"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="$126.53"
                    />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/secondaryColor"
                />

            <LinearLayout
                android:id="@+id/priceHighLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="?attr/selectableItemBackground"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:text="@string/marketplace_price_high"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/secondaryColor"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    />

                <TextView
                    android:id="@+id/priceHigh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/fira_mono_medium"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="$249.53"
                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/collectionPriceDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondaryColor"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <LinearLayout
            android:id="@+id/collectionPricesRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <LinearLayout
                android:id="@+id/collectionPriceLowLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="?attr/selectableItemBackground"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/secondaryColor"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    />

                <TextView
                    android:id="@+id/collectionPriceLow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/fira_mono_medium"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="-$25.00"
                    />

            </LinearLayout>
            <!--@string/marketplace_price_market-->
            <!--            <View-->
            <!--                android:layout_width="1dp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:background="@color/secondaryColor"-->
            <!--                />-->

            <LinearLayout
                android:id="@+id/collectionPriceMarketLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="?attr/selectableItemBackground"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:text="@string/tab_collection"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/secondaryColor"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    />

                <TextView
                    android:id="@+id/collectionPriceMarket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/fira_mono_bold"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="-$26.53"
                    />

            </LinearLayout>

            <!--            <View-->
            <!--                android:layout_width="1dp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:background="@color/secondaryColor"-->
            <!--                />-->

            <LinearLayout
                android:id="@+id/collectionPriceHighLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="?attr/selectableItemBackground"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/secondaryColor"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    />

                <TextView
                    android:id="@+id/collectionPriceHigh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/fira_mono_medium"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="-$100.53"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.robinhood.spark.SparkView
        android:id="@+id/priceSparkline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sparkline_height"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:spark_lineColor="@color/secondaryColor"
        app:spark_baseLineColor="@color/black26"
        app:spark_scrubEnabled="true"
        app:spark_scrubLineColor="@color/primaryColor"
        />

    <LinearLayout
        android:id="@+id/priceFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <CheckedTextView
            android:id="@+id/priceFilterWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/marketplace_history_filter_7day"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/marketplace_filter_text"
            android:background="@drawable/dr_marketplace_filter"
            android:checked="true"
            />

        <CheckedTextView
            android:id="@+id/priceFilterMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/marketplace_history_filter_30day"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/marketplace_filter_text"
            android:background="@drawable/dr_marketplace_filter"
            />

        <CheckedTextView
            android:id="@+id/priceFilterThreeMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/marketplace_history_filter_90day"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/marketplace_filter_text"
            android:background="@drawable/dr_marketplace_filter"
            />

    </LinearLayout>

</LinearLayout>
